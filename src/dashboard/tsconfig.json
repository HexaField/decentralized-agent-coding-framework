{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "server",
    "types": ["node", "vitest/globals"]
  },
  "include": ["server/**/*.ts", "server/**/*.test.ts"],
  "exclude": ["node_modules", "dist"]
}
