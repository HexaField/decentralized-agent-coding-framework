{
  "name": "mvp-dashboard",
  "private": true,
  "type": "module",
  "dependencies": {
    "express": "^4.19.2",
    "http-proxy": "^1.18.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.17.15",
    "@types/node": "^22.5.4",
    "@typescript-eslint/parser": "^8.45.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "solid-js": "^1.8.22",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.12",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-solid": "^2.10.2",
    "vitest": "^2.1.3"
  },
  "scripts": {
    "dev:server": "UI_DEV=1 tsx server/server.ts",
    "dev:ui": "vite dev --config ui/vite.config.ts",
    "dev": "concurrently -k -n server,ui -c blue,green \"npm:dev:server\" \"npm:dev:ui\"",
    "start": "npm run dev",
    "build": "echo 'No build needed; using tsx+vite dev'",
    "build:ui": "echo 'No build needed; using vite dev'",
    "build:all": "echo 'No build needed'",
    "lint": "eslint --ext .ts server ui",
    "format": "prettier --write \"{server,ui}/**/*.{ts,tsx,js,css,html}\"",
    "test": "vitest run"
  }
}
