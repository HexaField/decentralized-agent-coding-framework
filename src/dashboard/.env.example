# Shared environment for dashboard server and client

# Server
PORT=8090
DASHBOARD_TOKEN=dashboard-secret
ORCHESTRATOR_URL=http://0.0.0.0:18080
ORCHESTRATOR_TOKEN=orchestrator-secret
# CORS: comma-separated list, or * for open (avoid * if using credentials)
CORS_ORIGINS=https://localhost:5173

# UI / Vite (client)
# The server base the client uses for API/SSE/embed
VITE_SERVER_URL=https://localhost:8090
# Optionally expose Vite dev URL to server proxy (rarely needed)
VITE_DEV_URL=https://localhost:5173
VITE_DASHBOARD_TOKEN=dashboard-secret

# --- E2E test settings (used by Vitest) ---
# Prefer *_TEST values when running tests to avoid colliding with real data
# Use 8443 if running via docker compose (see scripts/start_orchestrator.sh)
DASHBOARD_URL_TEST=https://127.0.0.1:8443
DASHBOARD_TOKEN_TEST=dashboard-secret
ORCHESTRATOR_URL_TEST=http://127.0.0.1:18080
ORCHESTRATOR_TOKEN_TEST=orchestrator-secret

# Tailscale / Headscale (enable heavy tests by default)
RUN_TAILSCALE_E2E_TEST=1
HEADSCALE_URL_TEST=
TS_AUTHKEY_TEST=
TS_HOSTNAME_TEST=
# Force full setup so heavy paths are exercised
TEST_FAST_SETUP=0

# Talos bootstrap nodes (REQUIRED to run bootstrap test)
E2E_ORG_TEST=
E2E_CP_NODES_TEST=10.0.0.10 10.0.0.11
E2E_WK_NODES_TEST=10.0.0.12
