{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "strict": false,
    "outDir": "ui-dist",
    "rootDir": "ui",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"]
  },
  "include": ["ui/**/*.ts"],
  "exclude": ["node_modules"]
}
