{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "outDir": "ui-dist",
    "rootDir": "ui",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["ES2020", "DOM"]
  },
  "include": ["ui/**/*.{ts,tsx}"],
  "exclude": ["node_modules"]
}
